    <!-- CPE Tree View -->
    <record id="view_performance_cpe_tree" model="ir.ui.view">
        <field name="name">performance.cpe.tree</field>
        <field name="model">performance.cpe</field>
        <field name="arch" type="xml">
            <tree string="CPEs" decoration-info="state == 'draft'" 
                  decoration-success="state == 'acknowledged_by_employee'" 
                  decoration-warning="state == 'submitted_by_manager'">
                <field name="employee_id"/>
                <field name="cpe_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- CPE Form View -->
    <record id="view_performance_cpe_form" model="ir.ui.view">
        <field name="name">performance.cpe.form</field>
        <field name="model">performance.cpe</field>
        <field name="arch" type="xml">
            <form string="CPE">
                <header>
                    <button name="action_submit_cpe" string="Submit CPE"
                            type="object" class="oe_highlight"
                            groups="performance_reviews.group_employee"
                            modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_acknowledge_cpe" string="Acknowledge CPE"
                            type="object" class="oe_highlight"
                            groups="performance_reviews.group_employee"
                            modifiers="{'invisible': [('state', '!=', 'submitted_by_manager')]}"/>
                    <button name="action_reset_to_draft" string="Reset to Draft"
                            type="object" groups="performance_reviews.group_hr_manager"
                            modifiers="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" modifiers="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="cpe_date" modifiers="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Performance Review" name="performance">
                            <group>
                                <field name="accomplishments" attrs="{'readonly': [('state', '!=', 'draft')]}" placeholder="Key accomplishments (max 5000 words)"/>
                                <field name="challenges" attrs="{'readonly': [('state', '!=', 'draft')]}" placeholder="Challenges faced (max 5000 words)"/>
                                <field name="tasks" attrs="{'readonly': [('state', '!=', 'draft')]}" placeholder="Tasks and goals (max 5000 words)"/>
                                <field name="overall_comment" attrs="{'readonly': [('state', '!=', 'draft')]}" placeholder="Overall comments (max 5000 words)"/>
                            </group>
                        </page>
                        <page string="Employee Comments" name="comments">
                            <group>
                                <field name="employee_comment" attrs="{'readonly': [('state', '!=', 'submitted_by_manager')]}" placeholder="Employee comments (max 500 words)"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- CPE Search View -->
    <record id="view_performance_cpe_search" model="ir.ui.view">
        <field name="name">performance.cpe.search</field>
        <field name="model">performance.cpe</field>
        <field name="arch" type="xml">
            <search string="Search CPE">
                <field name="employee_id"/>
                <field name="cpe_date"/>
                <filter string="My CPEs" name="my_cpes" 
                        domain="[('employee_id', '=', uid)]"/>
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" 
                        domain="[('state', '=', 'submitted_by_manager')]"/>
                <filter string="Acknowledged" name="acknowledged" 
                        domain="[('state', '=', 'acknowledged_by_employee')]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" 
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Status" name="status" 
                            context="{'group_by': 'state'}"/>
                    <filter string="CPE Date" name="cpe_date" 
                            context="{'group_by': 'cpe_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- CPE Action Window -->
    <record id="action_performance_cpe" model="ir.actions.act_window">
        <field name="name">CPEs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">performance.cpe</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_cpes': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first CPE!
            </p>
            <p>
                Track continuous performance engagement.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_performance_cpe"
              name="CPEs"
              parent="menu_performance_reviews_main"
              action="action_performance_cpe"
              sequence="20"/>
</odoo>
