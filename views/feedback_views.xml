<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 360 Feedback Tree View -->
    <record id="view_performance_feedback_tree" model="ir.ui.view">
        <field name="name">performance.feedback.tree</field>
        <field name="model">performance.feedback</field>
        <field name="arch" type="xml">
            <tree string="360° Feedback" decoration-info="state == 'draft'" 
                  decoration-success="state == 'reviewed'" 
                  decoration-warning="state == 'submitted'">
                <field name="employee_id"/>
                <field name="state"/>
                <field name="reviewers" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- 360 Feedback Form View -->
    <record id="view_performance_feedback_form" model="ir.ui.view">
        <field name="name">performance.feedback.form</field>
        <field name="model">performance.feedback</field>
        <field name="arch" type="xml">
            <form string="360° Feedback">
                <header>
                    <button name="action_submit_feedback" string="Submit Feedback"
                            type="object" class="oe_highlight"
                            groups="performance_reviews.group_employee"
                            modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_submit_manager_feedback" 
                            string="Submit Manager Feedback"
                            type="object" class="oe_highlight"
                            groups="performance_reviews.group_employee"
                            modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_reset_to_draft" 
                            string="Reset to Draft"
                            type="object"
                            groups="performance_reviews.group_hr_manager"
                            modifiers="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Reviewers" name="reviewers">
                            <field name="reviewers" attrs="{'readonly': [('state', '!=', 'draft')]}" >
                                <tree editable="bottom">
                                    <field name="reviewer_id"/>
                                    <field name="relation_type"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Manager Feedback" name="manager_feedback"
                              groups="performance_reviews.group_employee">
                            <group>
                                <field name="manager_feedback" attrs="{'readonly': [('state', '=', 'reviewed')]}" placeholder="Manager's feedback (max 5000 words)"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- 360 Feedback Search View -->
    <record id="view_performance_feedback_search" model="ir.ui.view">
        <field name="name">performance.feedback.search</field>
        <field name="model">performance.feedback</field>
        <field name="arch" type="xml">
            <search string="Search 360° Feedback">
                <field name="employee_id"/>
                <filter string="My Feedback" name="my_feedback" 
                        domain="[('employee_id', '=', uid)]"/>
                <filter string="To Review" name="to_review" 
                        domain="[('reviewers.reviewer_id', '=', uid)]"/>
                <filter string="Draft" name="draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" 
                        domain="[('state', '=', 'submitted')]"/>
                <filter string="Reviewed" name="reviewed" 
                        domain="[('state', '=', 'reviewed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" 
                            context="{'group_by': 'employee_id'}"/>
                    <filter string="Status" name="status" 
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- 360 Feedback Action Window -->
    <record id="action_performance_feedback" model="ir.actions.act_window">
        <field name="name">360° Feedback</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">performance.feedback</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_feedback': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first 360° Feedback!
            </p>
            <p>
                Get comprehensive feedback from multiple perspectives.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_performance_feedback"
              name="360° Feedback"
              parent="menu_performance_reviews_main"
              action="action_performance_feedback"
              sequence="30"/>
              
    <!-- HR Manager Menu for all reviews -->
    <menuitem id="menu_performance_hr_dashboard"
              name="HR Dashboard"
              parent="menu_performance_reviews_root"
              sequence="100"
              groups="performance_reviews.group_hr_manager"/>
</odoo>
