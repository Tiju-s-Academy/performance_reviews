<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Performance Review Security Groups -->
    <record id="module_performance_review_category" model="ir.module.category">
        <field name="name">Performance Reviews</field>
        <field name="description">User access level for Performance Reviews</field>
        <field name="sequence">20</field>
    </record>

    <!-- Employee Group -->
    <record id="group_employee" model="res.groups">
        <field name="name">Employee</field>
        <field name="category_id" ref="module_performance_review_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Manager Group -->
    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_performance_review_category"/>
        <field name="implied_ids" eval="[(4, ref('group_employee'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="rre_employee_rule" model="ir.rule">
        <field name="name">Employee RRE Access</field>
        <field name="model_id" ref="model_performance_rre"/>
        <field name="domain_force">[('employee_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_employee'))]"/>
    </record>

    <record id="rre_manager_rule" model="ir.rule">
        <field name="name">Manager RRE Access</field>
        <field name="model_id" ref="model_performance_rre"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_manager'))]"/>
    </record>

    <record id="cpe_employee_rule" model="ir.rule">
        <field name="name">Employee CPE Access</field>
        <field name="model_id" ref="model_performance_cpe"/>
        <field name="domain_force">[('employee_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_employee'))]"/>
    </record>

    <record id="cpe_manager_rule" model="ir.rule">
        <field name="name">Manager CPE Access</field>
        <field name="model_id" ref="model_performance_cpe"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_manager'))]"/>
    </record>

    <record id="feedback_employee_rule" model="ir.rule">
        <field name="name">Employee 360 Feedback Access</field>
        <field name="model_id" ref="model_performance_feedback"/>
        <field name="domain_force">['|', ('employee_id', '=', user.id), ('reviewers.reviewer_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_employee'))]"/>
    </record>

    <record id="feedback_manager_rule" model="ir.rule">
        <field name="name">Manager 360 Feedback Access</field>
        <field name="model_id" ref="model_performance_feedback"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_manager'))]"/>
    </record>
</odoo>
